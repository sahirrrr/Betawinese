<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_item_like"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_item_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/like_item"
        app:layout_constraintStart_toStartOf="@id/view_item_like"
        app:layout_constraintTop_toTopOf="@id/view_item_like"
        app:layout_constraintBottom_toBottomOf="@id/view_item_like"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite"/>

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_fill"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/icon_heart"
        app:layout_constraintTop_toTopOf="@id/view_item_like"
        app:layout_constraintEnd_toEndOf="@id/view_item_like"
        app:layout_constraintBottom_toBottomOf="@id/view_item_like"/>

</androidx.constraintlayout.widget.ConstraintLayout>