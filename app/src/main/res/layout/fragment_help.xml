<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HelpFragment">

    <View
        android:id="@+id/view_background_help_color"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/help_setu"
        app:layout_constraintTop_toTopOf="@id/view_background_help_color"
        app:layout_constraintStart_toStartOf="@id/view_background_help_color"
        app:layout_constraintEnd_toEndOf="@id/view_background_help_color"/>

    <View
        android:id="@+id/view_background_help_white"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/view_background_help_color"
        app:layout_constraintEnd_toEndOf="@id/view_background_help_color"
        app:layout_constraintBottom_toBottomOf="@id/view_background_help_color"/>

    <TextView
        android:id="@+id/tv_title_help_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/help_setu_desc"
        app:layout_constraintTop_toTopOf="@id/view_background_help_white"
        app:layout_constraintStart_toStartOf="@id/view_background_help_white"
        app:layout_constraintEnd_toEndOf="@id/view_background_help_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>